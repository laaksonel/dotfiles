{
  "suggest.noselect": false,
  "coc.preferences.colorSupport": true,
  "coc.preferences.promptWorkspaceEdit": false,
  "highlight.disableLanguages": [],
  "highlight.document.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "graphql",
    "scala"
  ],
  "metals.statusBarEnabled": true,
  "coc.preferences.hoverTarget": "echo",
  "codeLens.enable": true,
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.local/share/nvim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  }
}
